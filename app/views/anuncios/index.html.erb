<div class="container text-center">
  <p id="notice" style="color: green !important;"><%= notice %></p>
  <div class="row">
    <div class="col-lg-12">
      <h1>Anuncios</h1>
    </div>
  </div>
  <br>
  <% if @anuncios.count > 0 %>
  <div class="row">
    <div class="col-sm-3 h3">
      Título
    </div> 
    <div class="col-sm-3 h3">
      Descrição
    </div>  
    <div class="col-sm-3 h3">
      Preço
    </div>
  </div>
  <br>
  <hr>
  
  <% @anuncios.each do |anuncio| %>
 
    <div class="row">
      <div class="col-sm-3 navbar-text h5">
        <br>  
        <%= anuncio.title %>
      </div>
      <div class="col-sm-3 navbar-text h5">
          <br>
        <%= anuncio.description %>
      </div>
      <div class="col-sm-3 navbar-text h5">
          <br>
        <%= anuncio.price %>
      </div>
       
      <div class="col-sm-3">
        <div class="btn-group-vertical"> 
          <%= link_to 'Ver Anúncio Completo', anuncio, class:"btn btn-info" %>
          <br>
          <%= link_to 'Editar', edit_anuncio_path(anuncio), class:"btn btn-primary"  %>
          <br>
      
          <%= link_to 'Deletar', anuncio, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger"  %>
        </div>
      </div>
   
    </div>
    <hr>
  <% end %>
  <br>
  <%= link_to 'Novo Anúncio', new_anuncio_path, class: "btn-lg btn-success" %>
  <br>
  <br>
  <% else %>
  <br>
  <h2>Nenhum anúncio ainda...</h2>
  <h4> Crie um agora mesmo: </h4> 
  <br>
  <%= link_to 'Criar Anúncio', new_anuncio_path, class: "btn-lg btn-success" %>
  <% end %>
  
</div>
 <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "btn btn-danger", style:"margin-left: 30px;"%>
<br>
<br>